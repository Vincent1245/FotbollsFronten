@page
@model FotbollsFronten.Pages.InboxModel
@{
    ViewData["Title"] = "Inkorg";
}

<h2>Inkorg</h2>

@if (Model.Messages != null && Model.Messages.Count > 0)
{
    foreach (var message in Model.Messages)
    {
        <div class="message">
            <p><strong>Från:</strong> @message.SenderEmail <br /> <strong>Skickat:</strong> @message.Timestamp</p>
            <p>@message.Content</p>
            <hr />
           
        </div>
    }
}
else
{
    <p>Inga meddelanden att visa.</p>
}

<hr />

<form method="post">
    <div class="form-group">
        <label for="receiverDropdown">Välj mottagare</label>
        <select id="receiverDropdown" class="form-control" asp-for="ReceiverId">
            <option value="">Välj en mottagare</option>
            @foreach (var user in Model.AllUsers)
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Content">Meddelande</label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Skicka</button>
</form>






   